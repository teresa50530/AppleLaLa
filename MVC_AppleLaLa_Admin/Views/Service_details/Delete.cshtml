@model MVCDataLibrary.DB_Model.Service_details

@{
    ViewBag.Title = "Delete";
}

@section topCSS{
    <link href="~/Assets/css/tables.css" rel="stylesheet" />
}

<h2>刪除服務細項</h2>

<h3>確定要刪除?</h3>
<div>
    <hr />
    <dl class="dl-horizontal horizontal">
        <dt>
            類型名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service_types.Type_name)
        </dd>

        <dt>
            名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            工作時間
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Work_duration)
        </dd>

        <dt>
            價格
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            折扣價
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Discount_price)
        </dd>

        <dt>
            描述
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            保固期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Warranty_period)
        </dd>

        <dt>
            相片
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Photo)" alt="暫無" style="width:400px;height:400px" />
        </dd>
        <dd>
            <a href="@Html.DisplayFor(model => model.Photo)">@Html.DisplayFor(model => model.Photo)</a>
        </dd>

        <dt>
            單位
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="確認刪除" class="btn del_btn confirm_del" />
        </div>
    }
    <div>
        @Html.ActionLink("回到列表", "Index")
    </div>
</div>
