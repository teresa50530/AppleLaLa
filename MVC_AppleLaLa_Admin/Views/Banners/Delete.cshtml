@model MVCDataLibrary.DB_Model.Banner

@{
    ViewBag.Title = "Delete";
}

@section topCSS {
    <link href="~/Assets/css/tables.css" rel="stylesheet" />
}

<h2>刪除資料</h2>

<h3>確定要刪除?</h3>
<div>
    <hr />
    <dl class="dl-horizontal horizontal">
        <dt>
            標題
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            副標題
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sut_title)
        </dd>

        <dt>
            文本
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            圖片連結
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Banner_photo_url)" alt="暫無" style="width:400px;height:400px" />
        </dd>
        <dd>
            <a href="@Html.DisplayFor(model => model.Banner_photo_url)">@Html.DisplayFor(model => model.Banner_photo_url)</a>
        </dd>

        <dt>
            最後更新日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Last_updata_date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="確認刪除" class="btn del_btn confirm_del" />
        </div>
    }

    <div>
        @Html.ActionLink("回到列表", "Index")
    </div>
</div>
