@model MVCDataLibrary.DB_Model.Protfolio

@{
    ViewBag.Title = "Delete";
}

@section topCSS {
    <link href="~/Assets/css/tables.css" rel="stylesheet" />
}

<h2>刪除服務資料</h2>

<h3>確定要刪除?</h3>
<div>
    <hr />
    <dl class="dl-horizontal horizontal">
        <dt>
            設計師名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Designer.Account)
        </dd>

        <dt>
            作品集名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service_details.Name)
        </dd>

        <dt>
            作品集
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Photo_url)" alt="暫無" style="width:400px;height:400px" />
        </dd>
        <dd>
            <a href="@Html.DisplayFor(model => model.Photo_url)">@Html.DisplayFor(model => model.Photo_url)</a>
        </dd>

        <dt>
            年
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            月
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Month)
        </dd>

        <dt>
            顏色類別
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color_type)
        </dd>

        <dt>
            描述
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            建立日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Create_date)
        </dd>

        <dt>
            最後更新日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Last_updata_date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="確認刪除" class="btn del_btn confirm_del" />
        </div>
    }
    <div>
        @Html.ActionLink("回到列表", "Index")
    </div>
</div>
