@model MVCDataLibrary.DB_Model.Order

@{
    ViewBag.Title = "Delete";
}

@section topCSS {
    <link href="~/Assets/css/tables.css" rel="stylesheet" />
}

<h2>刪除服務資料</h2>

<h3>確定要刪除?</h3>
<div>
    <hr />
    <dl class="dl-horizontal horizontal">
        <dt>
            客戶帳戶
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Account)
        </dd>

        <dt>
            付款方式
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Payway.Name)
        </dd>

        <dt>
            購買日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order_date)
        </dd>

        <dt>
            最後更新日期
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Last_updata_date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="確認刪除" class="btn del_btn confirm_del" />
        </div>
    }
    <div>
        @Html.ActionLink("回到列表", "Index")
    </div>
</div>
