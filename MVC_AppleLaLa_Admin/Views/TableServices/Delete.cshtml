@model MVCDataLibrary.DB_Model.Service

@{
    ViewBag.Title = "Delete";
}

@section topCSS {
    <link href="~/Assets/css/tables.css" rel="stylesheet" />
}

<h2>刪除服務資料</h2>

<h3>確定要刪除?</h3>
<div>
    <hr />
    <dl class="dl-horizontal horizontal">
        <dt>
            服務名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service_name)
        </dd>

        <dt>
            相片
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.Service_photo_url)" alt="暫無" style="width:400px;height:400px" />
        </dd>
        <dd>
            <a href="@Html.DisplayFor(model => model.Service_photo_url)">@Html.DisplayFor(model => model.Service_photo_url)</a>
        </dd>

        <dt>
            描述
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="確認刪除" class="btn del_btn confirm_del" />
        </div>
    }

    <div>
        @Html.ActionLink("回到列表", "Index")
    </div>
</div>
