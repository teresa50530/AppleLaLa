
@{
    ViewBag.Title = "View";
}
@*@{ Layout = null;
    }*@
<link href="~/Assets/css/style.css" rel="stylesheet" />
<link href="~/Assets/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Assets/css/solid.min.css" rel="stylesheet" />
<style>
    .buy {
        width: 75%;
        height: 500px;
        margin-top: 10%;
        margin-left: 25%;
        display: flex;
    }

    .buy_pic img {
        width: 300px;
        height: 300px
    }

    .choose_shop {
        margin-top: 20px;
    }

    .appointment_choose {
        margin-top: 20px;
    }

    .appointment {
        display: flex;
    }

    .buy_information {
        margin-left: 35px;
    }

    .buy_btn_add {
        margin-top: 20px;
    }

    .tabtitle {
        text-align: center;
    }

        .tabtitle ul li {
            display: inline;
            padding: 50px;
        }

    .style-one {
        border: 0;
        height: 1px;
        background: #D2B48C;
    }

    .time {
        margin-left: 10px;
    }

    #time {
        height: 30px;
    }
    .choose_designer button {
        background-color: var( --main-color);
        color: var(--title-white-color);
        border: none;
        padding: 5px 10px;
        font-size: 10px;
        border-radius: 3px;
    }
    .choose_shop button {
        background-color: var( --main-color);
        color: var(--title-white-color);
        border: none;
        padding: 5px 10px;
        font-size: 10px;
        border-radius: 3px;
    }

    .buy_btn_add button {
        background-color: var( --main-color);
        color: var(--title-white-color);
        border: none;
        padding: 5px 10px;
        font-size: 10px;
        border-radius: 3px;
    }
</style>

<div class="buy">
    <div class="buy_pic">
        <img src="https://drive.google.com/uc?export=view&id=1p-13ufCfzJGdKWkyqtU27d8KWhBIYLT3" alt="">
    </div>

    <div class="buy_information">
        <h2>作品名稱</h2>
        <!-- (編號) -->

        <p>價錢</p>
        <div class="choose_designer ">
            <p>設計師</p>
            <button>MARRY</button>
            <button>ALICE</button>
            <button>ELLA</button>
            <hr class="style-one" />
        </div>

        <div class="choose_shop ">
            <P>店家</P>
            <button>1號店</button>
            <button>2號店</button>
            <hr class="style-one" />
        </div>

        <div class="appointment_choose">
            <P>預約時間</P>
            <div class="appointment">
                <div class="Date">
                    <input type="date">
                </div>
                <form class="time">
                    <select name="time" id="time">
                        <option></option>
                        <option value="11">11~13</option>
                        <option value="12">12~14</option>
                        <option value="13">13~15</option>
                        <option value="14">14~16</option>
                        <option value="15">15~17</option>
                        <option value="16">16~18</option>
                        <option value="17">17~19</option>
                        <option value="18">18~20</option>
                    </select>
                </form>

            </div>
        </div>
        <div class="buy_btn_add">
            <button><i class="fas fa-heart"></i>Add Wish</button>
            <button><i class="fas fa-cart-plus"></i>Add CAart</button>
            <button><i class="fas fa-credit-card"></i>Buy Now</i> </button>
        </div>
    </div>
</div>


<div class="tabtitle">
    <ul>
        <li><a class="Guest feedback">客戶回饋</a></li>
        <li><a class="Q&A">常見Q&A</a></li>
        <li><a class="recommend">相關推薦</a></li>
    </ul>
</div>
<script src="~/Assets/js/jquery-3.2.1.min.js"></script>
<script src="~/Assets/js/fontawesome.min.js"></script>
<script src="~/Assets/js/solid.min.js"></script>