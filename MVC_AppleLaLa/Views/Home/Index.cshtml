@model MVC_AppleLaLa.ViewModels.Home.HomeViewModel

@{
    ViewBag.Title = "Home Page";
    var ourService = Model.homeOurServicesList;
    var banner = Model.BannerList;
    var environment = Model.HomeEnvironmentViewList;
}

@section topCSS{
    <link href="~/Assets/css/HomeOurServic.css" rel="stylesheet" />
}
<!-- Hero section -->
@section endJS{
    <script>
        $(".hover").mouseleave(
            function () {
                $(this).removeClass("hover");
            }
        );
    </script>
}
<section class="hero-section set-bg" data-setbg="../Assets/image/bg.jpg">
    <div class="container">
        <div class="hero-slider owl-carousel">
            <!-- slider item -->
            @foreach (var item in banner)
            {
                <div class="hs-item">
                    <div class="hs-content text-white">
                        <h2>@item.Title</h2>
                        <h4>@item.Sut_title</h4>
                        <p>@item.Text</p>
                    </div>
                    <div class="hs-preview set-bg" data-setbg="@item.Banner_photo_url"></div>
                </div>
            }



            <!-- slider item -->
            @*<div class="hs-item">
