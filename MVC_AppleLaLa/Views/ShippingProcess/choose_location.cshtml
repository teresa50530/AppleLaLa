

@section topCSS{
    <link href="~/Assets/css/location.css" rel="stylesheet" />
}


<section class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="allcard d-flex justify-content-center ">
                <a href="@Url.Action("Choose_services_list","ShippingProcess")" class="left_card card p-5" value="八德廣豐1號店">
